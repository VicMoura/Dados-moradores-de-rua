<%- include ('partials/header.ejs') %> 


<div class="vh-100">
    <div class="h-75 bg-light m-5 rounded border border-3 border-dark" >
        <div class="d-flex justify-content-center mt-3">
            <h3>SELECIONE AS INFORMAÇÕES A SEREM VISUALIZADAS</h3>
        </div>

        <div class="vh-100 d-block  m-5">
                <div class="d-flex">
                  
                        <div class="flex-row m-2">
                           <form method="POST" action="/visualizarDados">
                            <select id="primeiro-select" aria-label="Default select example" name="query_selecionada">
                                <option value="0" selected >Selecione a informação</option>
                                <% querys.forEach(query => { %>
                                    <option value="<%-query.id-%>"><%-query.nome-%></option>
                                <% });%>
                               
                            </select>  
                            <input type="submit" value="Visualizar Dados" onclick="confirmar()"/>
                           </form>
                        </div>
                
                </div>
                
            

              <div class="d-flex h-50 justify-content-center">
                <canvas id="myChart"></canvas>
            </div>
        </div>

       
    </div>

</div>


<%- include ('partials/footer.ejs') %> 